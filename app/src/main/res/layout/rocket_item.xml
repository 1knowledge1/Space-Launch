<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="8dp">
    <ImageView
        android:id="@+id/rocket_image"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/rocket_image"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rocket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
             />
        <TextView
            android:id="@+id/rocket_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/rocket_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/rocket_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/rocket_last_launch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/rocket_first_launch_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            />
    </LinearLayout>
</RelativeLayout>