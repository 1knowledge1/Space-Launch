<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_rocket_image"
            android:layout_width="135dp"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            android:layout_alignParentStart="true" >

            <ImageView
                android:id="@+id/rocket_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/black" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/card_view_rocket_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/rocket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="rocket_title" />

            <TextView
                android:id="@+id/rocket_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                tools:text="rocket_family" />

            <TextView
                android:id="@+id/rocket_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                tools:text="rocket_serial" />

            <TextView
                android:id="@+id/rocket_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                tools:text="rocket_details" />

            <TextView
                android:id="@+id/rocket_last_launch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                tools:text="rocket_last_launch_date" />

            <TextView
                android:id="@+id/rocket_first_launch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                tools:text="rocket_first_launch_date" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>