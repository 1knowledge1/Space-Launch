<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/test_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:textSize="24sp"
            tools:text="Великолепно!" />

        <ImageView
            android:id="@+id/test_result_image"
            android:layout_width="330dp"
            android:layout_height="210dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black" />

        <TextView
            android:id="@+id/test_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            tools:text="10 / 10" />

        <TextView
            android:id="@+id/test_result_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="20sp"
            tools:text="Поздравляем! Вы хорошо разбираетесь в космических фильмах!" />

        <Button
            android:id="@+id/test_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/end_test" />

    </LinearLayout>

</ScrollView>
